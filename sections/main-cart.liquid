{% comment %} checks for item property and tags {% endcomment %}
{%- comment -%} Checks if line item property has a gift or monogram{%- endcomment -%}

{% render 'main-cart-header', count: cart.item_count %}

<form
  action="{{ routes.cart_url }}"
  id="CartDrawer-Form"
  method="post"
>
  <div class="mx-auto w-full h-auto grid grid-cols-12 px-0 sm:px-0 md:px-10 lg:px-20 py-8 sm:py-8 md:py-12 lg:py-12">
    {% comment %} Basket base {% endcomment %}
    <div class="col-span-12 md:gap-x-3 sm:col-span-12 md:col-span-7 lg:col-span-9 pr-0 md:pr-16 lg:pr-32">
      {% comment %}
        keep for testing
        {{ cart.items | json }}
      {% endcomment %}
      {% render 'main-cart-items', item: cart.items %}

      {% render 'trade-in-option', border: false %}

      {% render 'bundle-card-cart', collectionSize: true %}
    </div>

    {% comment %} Side Banner {% endcomment %}
    <div class="col-span-12 sm:col-span-12 md:col-span-5 lg:col-span-3">
      {% render 'main-cart-total', item: cart.items %}
    </div>
  </div>
</form>

{% schema %}
{
  "name": "Cart",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    }
  ]
}
{% endschema %}
