{%- if section.settings.heading != blank -%}
  <h2 class="font-primary leading-primary-font text-10xl uppercase text-center pb-12">Reviews</h2>
{%- endif -%}
<div class="{{ section.settings.section_spacing }} scroll-m-40" id="reviews_container">
  <div class="px-6 mx-auto max-w-7xl">
    <!-- TrustBox widget - Product Reviews Carousel -->
    <div
      class="trustpilot-widget"
      data-locale="en-GB"
      data-template-id="60f537b5b0f1639de1fe048c"
      data-businessunit-id="PREVIEW_BUID"
      data-style-height="140px"
      data-style-width="100%"
      data-theme="light"
      data-sku="PREVIEW"
      data-review-languages="en"
      data-star-color="#000000"
      data-no-reviews="hide"
    >
      <a href="https://uk.trustpilot.com/review/" target="_blank" rel="noopener">Trustpilot</a>
    </div>
    <!-- End TrustBox widget -->
  </div>
</div>

{% schema %}
{
  "name": "Product Reviews",
  "class": "product-reviews",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Reviews"
    },
    {
      "type": "select",
      "id": "section_spacing",
      "label": "Section Spacing",
      "info": "Spacing will be added to the bottom of the section",
      "options": [
        {
          "value": "mb-0",
          "label": "None - 0px"
        },
        {
          "value": "mb-1 md:mb-2",
          "label": "XXSmall - Mobile: 4px | Desktop: 8px"
        },
        {
          "value": "mb-2 md:mb-4",
          "label": "XSmall - Mobile: 8px | Desktop: 16px"
        },
        {
          "value": "mb-4 md:mb-8",
          "label": "Small - Mobile: 16px | Desktop: 32px"
        },
        {
          "value": "mb-8 md:mb-16",
          "label": "Medium - Mobile: 32px | Desktop: 64px"
        },
        {
          "value": "mb-12 md:mb-28",
          "label": "Large - Mobile: 48px | Desktop: 112px"
        },
        {
          "value": "mb-20 md:mb-36",
          "label": "XLarge - Mobile: 80px | Desktop: 144px"
        },
        {
          "value": "mb-24 md:mb-44",
          "label": "XXL - Mobile: 96px | Desktop: 176px"
        }
      ],
      "default": "mb-0"
    }
  ],
  "presets": [
    {
      "name": "Product Reviews"
    }
  ],
  "enabled_on": {
    "templates": ["product"]
  }
}
{% endschema %}
