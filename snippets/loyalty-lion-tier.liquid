{% comment %}
  Renders a loyalty lion tier.

  Usage:
  {% render
    'loyalty-lion-tier',
        icon: block.settings.icon,
        background_image: block.settings.background_image,
        subtitle: block.settings.subtitle,
        title: block.settings.title,
        summary: block.settings.summary,
        tier_detail: block.settings.tier_detail
    %}
{% endcomment %}

<div class="relative w-full md:w-1/3 text-white py-16 border border-white border-b-0 last:border-b md:border-b md:border-r-0 md:last:border-r">
  {%- if background_image != blank -%}
    <img
      src="{{ background_image | image_url }}"
      class="absolute top-0 left-0 w-full h-full object-cover object-center z-0"
      width="auto"
      height="auto"
      alt="{{ background_image.alt }}"
      loading="lazy"
    >
  {%- endif -%}
  {%- if icon != blank or subtitle != blank or title != blank or summary != blank -%}
    <div class="relative">
      {%- if icon != blank -%}
        <img
          src="{{ icon | image_url: height: 39 }}"
          class="pb-8 mx-auto"
          width="auto"
          height="39"
          alt="{{ icon.alt }}"
          loading="lazy"
        >
      {%- endif -%}
      {%- if subtitle != blank or title != blank or summary != blank -%}
        <div class="px-6 md:px-16">
          {%- if subtitle != blank -%}
            <h4 class="font-secondary leading-secondary-font text-xl text-center pb-2">
              {{ subtitle }}
            </h4>
          {%- endif -%}
          {%- if title != blank -%}
            <h3 class="font-primary leading-primary-font text-10xl text-center uppercase pb-4">
              {{ title }}
            </h3>
          {%- endif -%}
          {%- if summary != blank -%}
            <p class="font-body leading-body-font text-base text-center pb-8">
              {{ summary }}
            </p>
          {%- endif -%}
        </div>
      {%- endif -%}
      {%- if tier_detail != blank -%}
        <div class="richtext richtext-invert richtext-p:text-base richtext-headings:font-secondary richtext-headings:text-2xl richtext-headings:leading-secondary-font richtext-ul:pl-4 px-16">
          {{ tier_detail }}
        </div>
      {%- endif -%}
    </div>
  {%- endif -%}
</div>
