{% unless shop.enabled_payment_types == empty %}
  {% assign payment_icons_available = 'visa,master,klarna,american_express,paypal,maestro,apple_pay,google_pay,amazon_payments,zip'
    | split: ','
  %}

  <span class="methods-of-payment flex items-center justify-center flex-wrap">
    {% for type in payment_icons_available %}
      {% if shop.enabled_payment_types contains type %}
        <img
          src="{{ type | payment_type_img_url }}"
          class="pr-2 pb-2 lazyload"
          width="50"
          height="30"
          alt="{{ type }}"
        >
      {% endif %}
    {% endfor %}

    {% if settings.show_afterpay %}
      <div class="flex pr-2 pb-2">
        {% render 'icon-after-pay' %}
      </div>
    {% endif %}

    {%- if settings.show_zip_widgets -%}
      <img
       src="{{ 'logo-zip.svg' | asset_url }}"
        class="pr-5 pb-4 lazyload"
        width="50"
        height="30"
        alt="Zip Payment Logo"
      >
    {%- endif -%}
  </span>
{% endunless %}
